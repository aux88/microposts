<li id="micropost-<%= micropost.id %>">
    <% if micropost.retweeted_id == nil %>
        <%= link_to gravatar_for(micropost.user, size:50), micropost.user %>
        <span class="user">
            <%= link_to micropost.user.name, micropost.user %>
        </span>
    <% else %>
        <p class="retweet_info">
        <%= micropost.user.name + "がリツイート" %>
        </p>
        <%= link_to gravatar_for(micropost.retweeted_micropost.user, size:50), micropost.retweeted_micropost.user %>
        <span class="user">
            <%= link_to micropost.retweeted_micropost.user.name, micropost.retweeted_micropost.user %>
        </span>
    <% end %>
    <span class="content">
        <%= micropost.content %>
    </span>
    <span class="timestamp">
        Posted <%= time_ago_in_words(micropost.created_at) %> ago.
        <% if current_user == micropost.user %>
            <%= link_to "delete", micropost, method: :delete, data: { confirm: "You sure?" } %>
        <% else %>
            <%= link_to "retweet", retweet_micropost_path(micropost), method: :post %>
        <% end %>
    </span>
</li>