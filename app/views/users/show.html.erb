<div class="row">
    <aside class="col-md-4">
        <section class="user_info">
            <h1>
                <%= gravatar_for @user %>
                <%= @user.name %>
            </h1> 
            <table class="table">
            <tbody>
                <tr>
                    <th scope="row">E-mail</th>
                    <td><%= @user.email %></td>
                </tr>
                <tr>
                    <th scope="row">Region</th>
                    <td><%= @user.region %></td>
                </tr>
                <tr>
                    <th scope="row">Profile</th>
                    <td><%= @user.profile %></td>
                </tr>
            </tbody>
        </table>
        </section>
    </aside>

    <div class="col-md-8">
        <%= render 'follow_form' if logged_in? %>
        <% if @user.microposts.any? %>
            <h3>Microposts(
                <%= @user.microposts.count %>
                )</h3>
            <ol class="microposts">
                <%= render @microposts %>
            </ol>
        <% end %>
    </div>
</div>
