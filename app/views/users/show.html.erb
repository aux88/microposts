<h1>
    <%= gravatar_for @user %>
    <%= @user.name %>
</h1>

<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <table class="table">
            <tbody>
                <tr>
                    <th scope="row">E-mail</th>
                    <td><%= @user.email %></td>
                </tr>
                <tr>
                    <th scope="row">Region</th>
                    <td><%= @user.region %></td>
                </tr>
                <tr>
                    <th scope="row">Profile</th>
                    <td><%= @user.profile %></td>
                </tr>
            </tbody>
        </table>
    </div>
</div>
