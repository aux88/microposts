<div class="row">
    <aside class="col-md-4">
        <%= render 'shared/user_profile' %>
    </aside>

    <div class="col-md-8">
        <%= render 'follow_form' if logged_in? %>
        <% if @user.follower_relationships.any? %>
            <h3>Followers(
                <%= @user.follower_relationships.count %>
                )</h3>
            <div class="row following">
                <% @follower_users.each do |follower_user| %>
                    <%= render partial: 'users/follower_users', locals: {follower_user: follower_user} %>
                <% end %>
            </div>
        <% end %>
    </div>
</div>