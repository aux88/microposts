<div class="row">
    <aside class="col-md-4">
        <%= render 'shared/user_profile' %>
    </aside>

    <div class="col-md-8">
        <%= render 'follow_form' if logged_in? %>
        <% if @user.follower_relationships.any? %>
            <h3>Followers(
                <%= @user.follower_relationships.count %>
                )</h3>
            <div class="row following">
                <%= render @follower_users %>
            </div>
        <% end %>
    </div>
</div>