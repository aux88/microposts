<div class="col-md-4 nopadding">
    <div class="user">
        <%= link_to gravatar_for(user, size:50), user %>
        
        <h2>
            <%= link_to user.name, user %>
        </h2>
        <div class="profile">
            <p>
                <%= user.region %>
            </p>
            <p>
                <%= user.profile %>
            </p>
        </div>
    </div>
</div>